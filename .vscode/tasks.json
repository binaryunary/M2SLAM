{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "command": "catkin build --cmake-args -DCMAKE_EXPORT_COMPILE_COMMANDS=1 -DCMAKE_BUILD_TYPE=Debug",
      "problemMatcher": [
        "$catkin-gcc"
      ],
      "label": "catkin_build",
    },
    {
      "command": "${workspaceFolder}/merge_compile_commands.sh",
      "type": "shell",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "label": "catkin: build",
      "problemMatcher": [],
      "dependsOn": [
        "catkin_build"
      ]
    },
    {
      "type": "shell",
      "command": "catkin clean --yes",
      "problemMatcher": [
        "$catkin-gcc"
      ],
      "label": "catkin_clean"
    },
    {
      "command": "rm ${workspaceFolder}/compile_commands.json",
      "type": "shell",
      "problemMatcher": [],
      "group": "build",
      "label": "catkin: clean",
      "dependsOn": [
        "catkin_clean"
      ]
    }
  ]
}
